{
  "name": "bromin",
  "version": "1.0.0",
  "private": true,
  "description": "A mini modern Electron browser with React, Tailwind, Framer Motion, ShadCN UI, Lucide icons",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite --config vite.config.js\" \"wait-on tcp:5173 && electron .\"",
    "start": "npm run dev",
    "build:ui": "vite build --config vite.config.js",
    "build": "npm run build:ui && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "BroMin",
    "appId": "com.bromin.app",
    "directories": {
      "output": "release"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "src/**",
      "assets/**",
      "dist/**",
      "package.json"
    ],
    "asar": false,
    "win": {
      "target": ["nsis"],
      "icon": "assets/icons/icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.png"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.12.5",
    "concurrently": "^9.0.1",
    "cross-fetch": "^4.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.19",
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  }
}
